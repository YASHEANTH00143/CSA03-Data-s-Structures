#include<stdio.h>  
long factorial(int n)  
{  
  if (n == 0)  
    return 1;  
  else  
    return(n * factorial(n-1));  
}  
void main()  
{  
  int num;  
  long fact;  
  printf("Enter a num: ");  
  scanf("%d", &num);   
  fact = factorial(num);  
  printf("Factorial of %d is %ld\n", num, fact);  
}  
